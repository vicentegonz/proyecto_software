    <style>
      form{
          text-align: center;
          border-radius: 5px;
          background-color: #f2f2f2;
          padding: 20px;
          width: 330px;
          margin-left: auto;
          margin-right: auto;
          border-radius: 20px;
          background-color: burlywood;
        
      }
        body {
          padding: 0;
          margin: 0;
          background-image: url("<%= asset_path('wine.jpg') %>");
          background-attachment: fixed;
          background-size: cover;
          font-family: 'Lato', sans-serif;
          display: block;
      }
    header{
        background-color: white;
    }
    .button {
      background-color: white;
      color: black;
      border: none;
      padding: 10px 20px;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      border-radius: 5px;
      font-size: 12px;
      margin: 4px 2px;
      transition-duration: 0.8s;
      border: 2px solid black;
  }
    .button:hover{
        background-color: rgb(3, 110, 65);
        color: white;
    }
    ul {
      list-style-type: none;
      margin: 0;
      padding: 0;
      overflow: hidden;
      background-color: #333;
    }
    
    nav {
      width: 100%;
      height: 60px;
      background-color: #333;
    
    }
    nav ul {
      float:left;
    }
    nav ul li{
      float: left;
      list-style: none;
      position: relative;
      text-decoration: none;
    }
    
    nav ul li a{
      display: block;
      color: azure;
      font-size: 14px;
      padding: 22px 14px;
      text-decoration: none;
    }
    nav ul li ul{
      display: none;
      position: absolute;
      background-color: #ad8080f8;
      width: 100px;
      text-decoration: none;
      padding: 0;
    }
    nav ul li:hover ul{
      display: block;
      position: absolute;
      text-decoration: none;
      color: whitesmoke;
      background-color: #ad8080f8;
      
    }
    nav ul li:hover a{
      text-decoration: none;
      color: whitesmoke;
      text-decoration: none;
      
    }
    nav ul li ul li a{
      padding: 5px 5px;
      float: left;
      text-decoration: none;
      background-color: #333;
    
    }
    nav ul li ul li a:hover{
      background-color: #ad8080f8;
      color: whitesmoke;
      
    }
    
    .alignright{
      position: absolute;
      float:right;
      right: 15px;
    }
      
  </style>
</head>

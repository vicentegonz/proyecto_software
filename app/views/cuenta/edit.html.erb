<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        form{
            text-align: center;
            border-radius: 5px;
            background-color: #f2f2f2;
            padding: 20px;
            width: 330px;
            margin-left: auto;
            margin-right: auto;
            border-radius: 20px;
            background-color: darkgray;
        }
        body {
            padding: 0;
            margin: 0;
            background-image: linear-gradient(
    rgba(0, 0, 0, 0.2),
    rgba(0, 0, 0, 0.2)
  ), url("<%= asset_path('fondo_orange.jpg') %>");
            background-attachment: fixed;
            background-size: cover;
            font-family: 'Lato', sans-serif;
            display: block;
        }
        .button {
            background-color: white;
            color: black;
            border: none;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            border-radius: 5px;
            font-size: 12px;
            margin: 4px 2px;
            transition-duration: 0.8s;
            border: 2px solid black;
        }
          .button:hover{
              background-color: rgb(3, 110, 65);
              color: white;
          }

          .alignright { float: right; }
          h1{
              color: black;
          }
    </style>
</head>
<body>
  <%= render :template => "header.html.erb"%>
    <p id="notice" style="color: #f2f2f2;"><%= notice %></p>    

<div class="parte1" style="text-align: center;">
<h1><strong>Editar Cuenta</strong></h1>
<div class="form">
<%= form_with(model: @user, method: :patch) do |form|%>
    <div class="field">
        <%= form.label :nombre%>
        <%= form.text_field :nombre, maxlength: 20, pattern:"[a-zA-Z]+"%>
    </div>
    <br>
    <div class="field">
        <%= form.label :apellidos%>
        <%= form.text_field :apellidos, maxlength: 20%>
    </div>
    <br>
    <div class="field">
        <%= form.label :username%>
        <%= form.text_field :username, maxlength: 20%>
    </div>
    <br>
    <div class="field">
        <%= form.label :sexo%>
        <%= form.select :sexo, [['Hombre','Hombre'],['Mujer','Mujer'],['Otro','Otro']] %>
    </div>
    <br>
    <div class="field">
      <%= form.label :contacto%>
      <%= form.number_field :contacto%>
    </div>
    <br>
    <% @comunas = Comuna.all %>
    <div class = 'field'>
      <%= form.label :comuna %>
      <%= form.select :comuna, @comunas.collect {|u| [  u.nombre, u.id] } %>
    </div>
   <br>
    <div class="field">
      <%= form.label :edad%>
      <%= form.number_field :edad%>
    </div>
    <br>
    <div class="field">
      <%= form.label :descripcion%>
      <%= form.text_field :descripcion, maxlength: 20%>
    </div>
    <br>
    <div>
      <%= form.label :foto %><br/>
      <%= form.file_field :foto %>
    </div>
    <br>
    <div class='actions'>
        <%= form.submit%>
    </div>
<% end %>
<%= link_to 'Cuenta', cuenta_taste_path, :method => :get, :class => "button"%>
</div>
</div>
</body>
<%= render :template => "header.html.erb"%>
<h1>Half-Orange &#128149; &#128165; </h1>
<div class="container">
  <h2>Encuentra tu pareja perfecta aquí</h2>
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <div class="item active">
        <%= image_tag("cita1.jpg", :width => "100%", :height => "100%")%>
        <div class="carousel-caption">
          <h3>Desliza para encontrar tu pareja perfecta</h3>
          
        </div>
      </div>
      <% @users = User.all %>
      <% @users.each do |user| %>
      <%if user.tipo == "Cliente"%>
      <%if user.id != current_user.id%>
      <div class="item">
        <%if user.foto.attached?%>
          <%= image_tag(user.foto, :class => "img_preview")  %>
        <%else%>
          <%= image_tag 'user.jpg',class: "img_preview"%>
        <%end%>
        <div class="carousel-caption">
          <h3><%=user.username%></h3>
          <p><%=user.descripcion%></p>
          <%if current_user.tipo == "Cliente"%>
            <%= button_to "Like", like_path(id_user1: current_user.id, id_user2: user.id), :method => :get, :class => "button_red" %>
          <%end%>
        </div>
      </div>
      <%end%>
    <%end%>
    <%end%>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

  <br><br>
<div class="abajo">
<%if current_user.tipo == "Administrador" or current_user.tipo == "Dueño"%>
  <%if current_user.tipo == "Administrador"%>
    <div class="row">
      <div class="column" style="background-color:#aaa;">
          <div class="photo" style="text-align: center;">
          <%= image_tag("restaurant.jpg", :size => "260x180")%>
          </div>
          <br><br>
          <div style="text-align: center;">
          <%= button_to "Restaurants", restauran_path, :method => :get, :class => "button" %>

          
        </div>
        <p></p>
      </div>
      <div class="column" style="background-color:#bbb;">
          <div class="photo" style="text-align: center;">
          <%= image_tag("comunas.jpg", :size => "260x180")%>
      </div>
      <br><br>
      <div style="text-align: center;">
          <%= button_to "Comunas", comunas_path, :method => :get, :class => "button" %>
      </div>
      </div>
      <div class="column" style="background-color:#ccc;">
          <div class="photo" style="text-align: center;">
          <%= image_tag("comentarios.png", :size => "260x180")%>
      </div>
      <br><br>
      <div style="text-align: center;">
        <%= button_to "Comentarios", coments_path, :method => :get, :class => "button" %>
    </div>
  <%else%>
    <div class="row" style="margin: auto;">
      <div class="column" style="background-color:#aaa;">
          <div class="photo" style="text-align: center;">
          <%= image_tag("restaurant.jpg", :size => "260x180")%>
          </div>
          <br><br>
          <div style="text-align: center;">
            <%= button_to "Restaurants", restauran_path, :method => :get, :class => "button" %>
        
        </div>
        
  <%end%>
<%end%> 

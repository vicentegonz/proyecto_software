  <!-- Header -->
  <header class="masthead">
    <div class="container d-flex h-100 align-items-center">
      <div class="mx-auto text-center">
        <h1 class="mx-auto my-0 text-uppercase">Half-Orange</h1>
        <h2 class="text-white-50 mx-auto mt-2 mb-5">A free page where you will find your Half-Orange.</h2>
        
        <% if current_user %>
        <p class="text-white-50 mx-auto mt-2 mb-5">Bienvenido <%= current_user.username%></p>
        <%=link_to 'Inicia', welcome_path, method: :get, :class => "btn btn-primary js-scroll-trigger"%>
      
        <%=link_to 'cerrar session', destroy_user_session_path, method: :delete, :class => "btn btn-primary js-scroll-trigger"%>
        <%else%>
        <%=link_to 'registrarse', new_user_registration_path, :method => :get, :class => "btn btn-primary js-scroll-trigger" %>
        <%=link_to 'iniciar session', new_user_session_path, :method => :get, :class => "btn btn-primary js-scroll-trigger"%>
        <%end%>
        
    
      </div>
    </div>
  </header>

  <!-- About Section -->
 <section id="about" class="about-section text-center">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 mx-auto">
          <h2 class="text-white mb-4">Crea tu nueva experiencia</h2>
          <p class="text-white-50">A solo un click de encontrar tu pareja perfecta. Además podrás encontrar los mejores restaurants de la zona en donde realizaras tus futuras citas

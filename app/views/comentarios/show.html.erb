  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>   
<style>
  table {
    font-family: arial, sans-serif;
    border-collapse: collapse;
    width: 50%;
    margin-left:auto; 
margin-right:auto;
    
  }
  
  
  td, th {
    border: 3px solid black;
    text-align: left;
    padding: 8px;
  }
  
  tr{
  border: black;
    background-color: #dddddd;
  }
  body {
    padding: 0;
    margin: 0;
    background-image: url("<%= asset_path('comentario.jpg') %>");
    background-attachment: fixed;
    background-size: cover;
    font-family: 'Lato', sans-serif;
    display: block;
}
.button {
  background-color: white;
  color: black;
  border: none;
  padding: 10px 20px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  border-radius: 5px;
  font-size: 12px;
  margin: 4px 2px;
  transition-duration: 0.8s;
  border: 2px solid black;
}
.button:hover{
    background-color: rgb(3, 110, 65);
    color: white;
}
h2{
  color: black;
  text-align: center;
}

</style>
</head>
<body>
  <%= render :template => "header.html.erb"%>
<p id="notice"><%= notice %></p>
<h2><strong>Comentario</strong></h2>
<br>
<div style="text-align: center;">
<table style="border:1px solid black;margin-left:auto;margin-right:auto;">
  <thead>
      <tr>
          <th style="text-align: center;">Usuario</th>
          <th style="text-align: center;">Restaurant</th>
          <th style="text-align: center;">Contenido</th>
          
      </tr>
  </thead>

<tbody>
  <tr>
      <td style="text-align: center;"><%= @comentario.user_id%></td>
      <td style="text-align: center;"><%= @comentario.restaurant_id%></td>
      <td style="text-align: center;"><%= @comentario.contenido%></td>
      
  </tr>
</tbody>
</table>

<%= link_to 'Listado de comentarios', comentarios_path, :method => :get, :class => "button" %>

<%= link_to 'Editar comentario', comentarios_edit_path(@comentario.id), :method => :get, :class => "button" %>

<%= link_to 'Eliminar comentario', comentario_path(@comentario.id), method: :delete, data: { confirm: 'EstÃ¡ seguro que desea borrar el comentario?'  } , :class => "button" %>
</div>

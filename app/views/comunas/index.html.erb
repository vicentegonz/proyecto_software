<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        table {
          font-family: arial, sans-serif;
          border-collapse: collapse;
          width: 50%;
        }
        
        td, th {
          border: 3px solid black;
          text-align: left;
          padding: 8px;
        }
        
        tr{
        border: black;
          background-color: #dddddd;
        }
        .comuna{
          margin: 10px 200px;
          background-color: whitesmoke;
        }
        body{
            padding: 0;
            margin: 0;
            background-color: whitesmoke;
            background-attachment: fixed;
            background-size: cover;
            font-family: 'Lato', sans-serif;
            display: block;
        }
        .button {
          background-color: white;
          color: black;
          border: none;
          padding: 10px 20px;
          text-align: center;
          text-decoration: none;
          display: inline-block;
          border-radius: 5px;
          font-size: 15px;
          margin: 4px 2px;
          transition-duration: 0.8s;
          border: 2px solid black;
      }
        .button:hover{
            background-color: rgb(6, 105, 39);
            color: black;
        }
        .card{
        margin: 10px 250px;
        background-color:wheat
      }
 
    
        </style>

</head>
<body >
  <%= render :template => "header.html.erb"%>
    
<p id="notice"><%= notice %></p>
<div class="parte1" style="text-align: center;">
    <h1><strong>Comunas</strong></h1>
    
    <br>
  <div class="comuna">
    <% @comunas.each do |comuna|%>
      <div class="card mb-3" style="max-width: 540px;">
        <div class="row no-gutters">
          <div class="col-md-8">
            <div class="card-body">
              <h4 class="card-title"><strong>Comuna: </strong><%= comuna.nombre%></h4>
              <p class="card-text"><%= link_to 'Ver detalles', comuna_path(comuna.id)%></p>  
            </div>
          </div>
        </div>
      </div>
    <%end%>
  </div>

    <%if current_user.tipo == "Administrador"%>
      <%= button_to "Agregar comuna", new_comuna_path, :method => :get, :class => "button"%>
    <%end%>

</div>
<div>

</div>
</body>


<%if Integer(@restaurant.id) == Integer(meeting.restaurant_id) and Integer(meeting.check) == 1 and (Integer(meeting.usuario1) == Integer(current_user.id) or Integer(meeting.usuario2) == Integer(current_user.id))%>

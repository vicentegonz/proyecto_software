    <span class="fa fa-star-o"></span>
    <span class="fa fa-star-o"></span>
    <span class="fa fa-star-o"></span>
    <span class="fa fa-star-o"></span>
  <%else%>
    <%$cantidad = Integer(@restaurant.valoracion/@restaurant.cvaloracion)%>

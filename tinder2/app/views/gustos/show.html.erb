<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  <style>
      table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 50%;
        margin-left:auto; 
    margin-right:auto;
        
      }
      
      
      td, th {
        border: 3px solid black;
        text-align: left;
        padding: 8px;
      }
      
      tr{
      border: black;
        background-color: #dddddd;
      }
      body {
        padding: 0;
        margin: 0;
        background-image: url("<%= asset_path('pancakes.jpg') %>");
        background-attachment: fixed;
        background-size: cover;
        font-family: 'Lato', sans-serif;
        display: block;
    }
    .button {
      background-color: white;
      color: black;
      border: none;
      padding: 10px 20px;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      border-radius: 5px;
      font-size: 15px;
      margin: 4px 2px;
      transition-duration: 0.8s;
      border: 2px solid black;
  }
    .button:hover{
        background-color: rgb(110, 42, 3);
        color: white;
    }
    ul {
      list-style-type: none;
      margin: 0;
      padding: 0;
      overflow: hidden;
      background-color: #333;
    }
    
    nav {
      width: 100%;
      height: 60px;
      background-color: #333;
    
    }
    nav ul {
      float:left;
    }
    nav ul li{
      float: left;
      list-style: none;
      position: relative;
      text-decoration: none;
    }
    
    nav ul li a{
      display: block;
      color: azure;
      font-size: 14px;
      padding: 22px 14px;
      text-decoration: none;
    }
    nav ul li ul{
      display: none;
      position: absolute;
      background-color: #ad8080f8;
      width: 100px;
      text-decoration: none;
      padding: 0;
    }
    nav ul li:hover ul{
      display: block;
      position: absolute;
      text-decoration: none;
      color: whitesmoke;
      background-color: #ad8080f8;
      
    }
    nav ul li:hover a{
      text-decoration: none;
      color: whitesmoke;
      text-decoration: none;
      
    }
    nav ul li ul li a{
      padding: 5px 5px;
      float: left;
      text-decoration: none;
      background-color: #333;
    
    }
    nav ul li ul li a:hover{
      background-color: #ad8080f8;
      color: whitesmoke;
      
    }
    
    .alignright{
      position: absolute;
      float:right;
      right: 15px;
    }
</style>
</head>
<body>
  <nav>
    <ul>
      <li><a class="/welcome" href="/welcome">Home</a></li>
      <li><a href="/restaurants">Restaurants</a></li>
      <li><a href="/comunas">Comunas</a></li>
      <li><a href="/comentarios">Comentarios</a></li>
      <li><a href="/gustos">Gustos</a></li>
      <li><a href="/meetings">Citas</a></li>
      <li class="alignright"><a href="/cuenta">Mi cuenta</a>
        <ul>
          <li><a><%=link_to 'Cerrar session', destroy_user_session_path, method: :delete%>
          </a></li>
          
          <li><a href="/confirmacion"> Eliminar cuenta</a></li>
          
        </ul>
      </li>
    </ul>
  </nav>
<p id="notice"><%= notice %></p>



<div style="text-align: center;">
  <h2 style="color: white;"><strong>Gustos</strong></h2>
  <table style="border:1px solid black;margin-left:auto;margin-right:auto;">
  <thead>
    <tr>
          <th style="text-align: center;">Nombre</th>
          <th style="text-align: center;">Descripción</th>
    </tr>
  </thead>

  <tbody>
    <tr>
          <td style="text-align: center;"><%= @gusto.nombre%></td>
          <td style="text-align: center;"><%= @gusto.descripcion%></td>
    </tr>
  </tbody>
  </table>

  <br>
  
    <%= link_to 'Listado de gustos', gustos_path, :method => :get, :class => "button" %>

    <%= link_to 'Editar gusto', gustos_edit_path(@gusto.id), :method => :get, :class => "button" %>

    <%= link_to 'Eliminar gusto', gusto_path(@gusto.id), method: :delete, data: { confirm: 'Está seguro que desea borrar el gusto?'  }, :class => "button"  %>

</div>
</body>